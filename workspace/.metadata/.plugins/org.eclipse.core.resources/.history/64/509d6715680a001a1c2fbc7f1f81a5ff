package educat;


import java.awt.Color;
import java.awt.Dimension;
import java.awt.event.MouseEvent;
import java.awt.event.MouseListener;
import java.awt.event.MouseMotionListener;

import javax.swing.ImageIcon;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class Home extends JFrame  {
	
	String text = null;
	JLabel just;
	static JPanel pane;
	Boolean origin = true;
	public Home () {
		HandlerClass russ = new HandlerClass();
		ImageIcon icon = new ImageIcon("src/rocket.jpg");
		ImageIcon bg = new ImageIcon("src/NightSky.jpg");
		JFrame frame = new JFrame();
	    JLabel image = new JLabel(icon);
	    JLabel bg_ = new JLabel(bg);
	    pane = new JPanel();
		pane.setLayout(null);
		just = new JLabel("String");
		pane.addMouseListener(russ);
		pane.addMouseMotionListener(russ);
		//pane.setBackground(Color.BLUE);
		frame.setSize(300,300);
		frame.add(pane);
		pane.add(bg_);
		pane.add(image);
		//pane.add(just);
		frame.setVisible(true);
	    while(true){
	    image.setBounds(HandlerClass.x,HandlerClass.y,300,300);
	    }
	}
	
	//MouseEvents.
	public static class HandlerClass implements MouseListener,MouseMotionListener {

		public static int x;
		public static int y = 20;
		@Override
		public void mouseDragged(MouseEvent e) {
			
			//pane.setBackground(Color.GRAY);
			x = e.getX();
			y = e.getY();
		}

		@Override
		public void mouseMoved(MouseEvent e) {
			//pane.setBackground(Color.BLUE);
			
		}

		@Override
		public void mouseClicked(MouseEvent e) {
			//pane.setBackground(Color.RED);
			x = e.getX();
			y = e.getY();
			System.out.println(x+","+y);
		}

		@Override
		public void mouseEntered(MouseEvent e) {
			//pane.setBackground(Color.PINK);
			
		}

		@Override
		public void mouseExited(MouseEvent e) {
			//pane.setBackground(Color.YELLOW);
			
		}

		@Override
		public void mousePressed(MouseEvent e) {
			//pane.setBackground(Color.ORANGE);
			System.out.println(e.getX()+","+e.getY());
			
		}

		@Override
		public void mouseReleased(MouseEvent e) {
			//pane.setBackground(Color.CYAN);
			
		}	
	}
	public static void main(String[] args){
		new Home();
		
	}
}  


